<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.NovoProduto"
             Title="➕ Novo Produto"
             BackgroundColor="#F5F6FA">

    <!-- Toolbar com ícone -->
    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="save.png"
                     Text="Salvar"
                     Clicked="ToolbarItem_Clicked" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="15">

            <!-- Descrição -->
            <HorizontalStackLayout VerticalOptions="Center">
                <Image Source="product.png" WidthRequest="24" HeightRequest="24" />
                <Label Text="Descrição do Produto:" FontAttributes="Bold" VerticalOptions="Center" Margin="10,0,0,0"/>
            </HorizontalStackLayout>
            <Entry x:Name="txt_descricao" Placeholder="Digite a descrição..." />

            <!-- Quantidade -->
            <HorizontalStackLayout VerticalOptions="Center">
                <Image Source="quantity.png" WidthRequest="24" HeightRequest="24" />
                <Label Text="Quantidade:" FontAttributes="Bold" VerticalOptions="Center" Margin="10,0,0,0"/>
            </HorizontalStackLayout>
            <Entry x:Name="txt_quantidade" Placeholder="0" Keyboard="Numeric" TextChanged="OnQuantidadeOuPrecoChanged" />

            <!-- Preço Unitário -->
            <HorizontalStackLayout VerticalOptions="Center">
                <Image Source="price.png" WidthRequest="24" HeightRequest="24" />
                <Label Text="Preço Unitário:" FontAttributes="Bold" VerticalOptions="Center" Margin="10,0,0,0"/>
            </HorizontalStackLayout>
            <Entry x:Name="txt_preco" Placeholder="0,00" Keyboard="Numeric" TextChanged="OnQuantidadeOuPrecoChanged" />

            <!-- Total Calculado -->
            <Frame BackgroundColor="#dfe6e9"
                   CornerRadius="10"
                   Padding="15"
                   HasShadow="True"
                   HorizontalOptions="FillAndExpand">
                <Label x:Name="lbl_total"
                       Text="Total: R$ 0,00"
                       FontAttributes="Bold"
                       FontSize="18"
                       TextColor="#00b894"
                       HorizontalTextAlignment="Center" />
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
